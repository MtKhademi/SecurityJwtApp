@page
@model RazorPage_Identity.Pages.Account.Login

@{
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <div class="container border p-5">
        <form method="post">
            <div class="form-group row mb-1">
                <label asp-for="Credential.UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Credential.UserName" class="form-control" />
                    <span asp-validation-for="Credential.UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Credential.Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" asp-for="Credential.Password" class="form-control" />
                    <span asp-validation-for="Credential.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
               <input type="submit" class="btn btn-primary col-sm-2" value="Login"/>
            </div>
        </form>
    </div>
</div>
</body>
</html>